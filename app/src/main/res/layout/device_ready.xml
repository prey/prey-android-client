
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1E2938"
    android:orientation="vertical"
     >




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="right"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3">

        <ImageView
            android:id="@+id/imgViewPrey2"
            android:src="@drawable/native_protected"
            android:layout_width="201dp"
            android:layout_height="311dp"

            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/textView2" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:src="@drawable/iso_mono_b"
            android:layout_width="40dp"
            android:layout_height="40dp"
             />

        <LinearLayout
            android:id="@+id/linearLayout1_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView3_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/protect_button_title_1"
                android:textSize="15sp"
                android:fontFamily="inherit"
                android:textColor="#efeae8"    />
            <TextView
                android:id="@+id/textView3_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/protect_button_subtitle_1"
                android:textColor="#dacfca"

                android:fontFamily="Avenir Next LT Pro"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgViewPreyAccount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/isok2"  />
    </LinearLayout>





    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/icon_cog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout2_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView4_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/protect_button_title_2"
                android:textSize="15sp"
                android:fontFamily="inherit"
                android:textColor="#efeae8"    />
            <TextView
                android:id="@+id/textView4_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/protect_button_subtitle_2"
                android:textColor="#dacfca"

                android:fontFamily="Avenir Next LT Pro"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imgViewSetup"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/isok2"  />
    </LinearLayout>







</RelativeLayout>


